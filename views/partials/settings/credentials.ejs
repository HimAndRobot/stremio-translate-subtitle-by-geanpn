<!-- Credentials Content -->
<div id="credentials-pane" class="space-y-8">
    <header>
        <h1 class="text-2xl font-black text-slate-900 tracking-tight uppercase">API Credentials</h1>
        <p class="text-xs text-slate-400 font-bold uppercase tracking-widest mt-1">Manage your translation API keys securely</p>
    </header>

    <!-- Security Info Box -->
    <div class="bg-indigo-600 rounded-[32px] p-8 text-white relative overflow-hidden shadow-xl shadow-indigo-100">
        <div class="relative z-10">
            <div class="flex items-center gap-3 mb-4">
                <div class="bg-white/20 p-2 rounded-xl backdrop-blur-md">
                    <i data-lucide="shield-check" class="w-6 h-6"></i>
                </div>
                <h3 class="text-lg font-bold tracking-tight">Client-Side Encryption</h3>
            </div>
            <p class="text-indigo-100 text-sm leading-relaxed max-w-2xl mb-6">
                Your credentials are protected with military-grade encryption before being stored in your browser. Data never leaves your device and we never have access to your master password.
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-[11px] font-bold uppercase tracking-wider text-indigo-200">
                <div class="flex items-center gap-2"><div class="w-1.5 h-1.5 rounded-full bg-indigo-300"></div> AES-256-GCM Standard</div>
                <div class="flex items-center gap-2"><div class="w-1.5 h-1.5 rounded-full bg-indigo-300"></div> PBKDF2 (100k iterations)</div>
                <div class="flex items-center gap-2"><div class="w-1.5 h-1.5 rounded-full bg-indigo-300"></div> Zero Server Storage</div>
                <div class="flex items-center gap-2"><div class="w-1.5 h-1.5 rounded-full bg-indigo-300"></div> Local Master Key</div>
            </div>
        </div>
        <div class="absolute -right-10 -bottom-10 opacity-10">
            <i data-lucide="lock" class="w-48 h-48"></i>
        </div>
    </div>

    <!-- Add New Credential Form -->
    <div class="bg-white rounded-[32px] shadow-sm border border-slate-100 overflow-hidden">
        <div class="p-8 border-b border-slate-50 flex items-center gap-3">
            <div class="w-10 h-10 bg-slate-50 rounded-xl flex items-center justify-center text-indigo-600">
                <i data-lucide="plus" class="w-5 h-5"></i>
            </div>
            <h3 class="text-sm font-black text-slate-800 uppercase tracking-widest">Add New Credential</h3>
        </div>

        <form id="credential-form" onsubmit="saveCredential(event)" class="p-8 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">Name (Identifier)</label>
                    <input type="text" id="cred-name" placeholder="e.g., My OpenAI Account" required
                        class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-3.5 text-sm font-medium outline-none focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all">
                </div>
                <div class="space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">Provider</label>
                    <select id="cred-provider" required onchange="updateProviderFields()"
                        class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-3.5 text-sm font-medium outline-none focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all">
                        <option value="">Select Provider</option>
                    </select>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div id="apikey-group" class="hidden space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">API Key</label>
                    <input type="password" id="cred-apikey" placeholder="sk-..."
                        class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-3.5 text-sm font-medium outline-none focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all">
                </div>

                <div id="model-group" class="hidden space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">Default Model</label>
                    <select id="cred-model" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-3.5 text-sm font-medium outline-none focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all">
                    </select>
                </div>

                <div id="baseurl-group" class="hidden col-span-full space-y-1.5">
                    <label class="text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">Custom Base URL</label>
                    <input type="text" id="cred-baseurl" placeholder="https://api.openai.com/v1"
                        class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-3.5 text-sm font-medium outline-none focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all">
                </div>
            </div>

            <div class="pt-4">
                <button type="submit" class="w-full md:w-auto px-10 py-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-2xl font-black text-xs uppercase tracking-widest shadow-lg shadow-indigo-100 transition-all active:scale-95 flex items-center justify-center gap-3">
                    <i data-lucide="save" class="w-4 h-4"></i>
                    Save Credential
                </button>
            </div>
        </form>
    </div>

    <!-- Saved Credentials List -->
    <div class="space-y-4">
        <div class="flex items-center justify-between px-2">
            <h3 class="text-sm font-black text-slate-800 uppercase tracking-widest flex items-center gap-2">
                <i data-lucide="list" class="w-4 h-4 text-indigo-500"></i>
                Saved Credentials
            </h3>
            <span id="cred-count-badge" class="bg-slate-100 text-slate-500 text-[10px] font-black px-2.5 py-1 rounded-full uppercase tracking-tighter">0 Items</span>
        </div>

        <div id="credentials-container" class="grid grid-cols-1 md:grid-cols-2 gap-4 min-h-[100px]">
            <!-- Credentials populated by JavaScript -->
        </div>
    </div>
</div>
