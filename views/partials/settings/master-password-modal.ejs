<!-- Master Password Modal -->
<div id="master-password-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-6 bg-slate-900/40 backdrop-blur-sm">
    <div class="bg-white w-full max-w-md rounded-[40px] shadow-2xl overflow-hidden">
        <div class="p-10 text-center">
            <div class="w-16 h-16 bg-indigo-50 text-indigo-600 rounded-3xl flex items-center justify-center mx-auto mb-6">
                <i data-lucide="lock" class="w-8 h-8"></i>
            </div>
            <h2 class="text-xl font-black text-slate-900 tracking-tight uppercase mb-2">Master Password</h2>
            <p class="text-sm text-slate-400 font-medium leading-relaxed mb-8">This password will be used to encrypt/decrypt your data locally. Choose a strong one and remember it.</p>

            <div class="space-y-4">
                <div class="text-left space-y-1.5">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pl-1">Master Password</label>
                    <input type="password" id="master-password-input" placeholder="Enter your master password"
                        class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-sm font-bold outline-none focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all">
                </div>
                <div class="flex gap-3 pt-2">
                    <button onclick="closeMasterPasswordModal()" class="flex-1 py-4 text-xs font-black text-slate-400 uppercase tracking-widest hover:text-slate-600 transition-colors">Cancel</button>
                    <button onclick="confirmMasterPassword()" class="flex-1 py-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-2xl font-black text-xs uppercase tracking-widest shadow-lg shadow-indigo-100 transition-all">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>
