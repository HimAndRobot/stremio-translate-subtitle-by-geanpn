                    const reprocessBtn = episode.apikey_encrypted
                        ? `<button onclick="reprocess(${episode.id})" class="p-1.5 text-slate-400 hover:text-amber-600"><i data-lucide="refresh-cw" class="w-4 h-4"></i></button>`
                        : `<button onclick="openReprocessModal(${episode.id})" class="p-1.5 text-slate-400 hover:text-amber-600"><i data-lucide="refresh-cw" class="w-4 h-4"></i></button>`;

                    html += `
                        <div class="flex items-center justify-between p-3.5 rounded-2xl border border-red-100 bg-red-50/10 transition-all">
                            <div class="flex items-center gap-4">
                                <div class="w-1.5 h-1.5 rounded-full bg-red-500"></div>
                                <span class="text-xs font-bold text-slate-700 uppercase">${episodeLabel}</span>
                            </div>
                            <div class="flex items-center gap-1">
                                ${reprocessBtn}
                                <button onclick="deleteTranslation(${episode.id})" class="p-1.5 text-slate-400 hover:text-red-500"><i data-lucide="trash-2" class="w-4 h-4"></i></button>
                            </div>
                        </div>
                    `;
                } else if (episode.status === 'manual_search') {
                    const dateStr = new Date(episode.created_at).toLocaleDateString('pt-BR', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
                    html += `
                        <div class="flex items-center justify-between p-3.5 rounded-2xl border border-amber-100 bg-amber-50/30 transition-all">
                            <div class="flex items-center gap-4">
                                <div class="w-1.5 h-1.5 rounded-full bg-amber-500"></div>
                                <span class="text-xs font-bold text-slate-700 uppercase">${episodeLabel}</span>
                                <span class="text-[9px] font-bold text-amber-600 uppercase">${dateStr}</span>
                            </div>
                            <div class="flex items-center gap-1">
                                <button onclick="openIdentifyModal(${episode.id})" class="p-1.5 text-slate-400 hover:text-indigo-600"><i data-lucide="search" class="w-4 h-4"></i></button>
                                <button onclick="deleteTranslation(${episode.id})" class="p-1.5 text-slate-400 hover:text-red-500"><i data-lucide="trash-2" class="w-4 h-4"></i></button>
                            </div>
                        </div>
                    `;
                }
            });

            modalBody.innerHTML = html;
            document.getElementById('episodesModalCount').textContent = `${sortedEpisodes.length} Epis√≥dios no Total`;
            modal.classList.remove('hidden');
            modal.classList.add('flex');

            setTimeout(() => lucide.createIcons(), 50);
        }

        function closeEpisodesModal() {
            const modal = document.getElementById('episodesModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        function filterSeries() {
            const searchTerm = document.getElementById('searchBox').value.toLowerCase();
            const cards = document.querySelectorAll('.series-card');

            cards.forEach(card => {
                const title = card.querySelector('h3').textContent.toLowerCase();
                const imdbId = card.querySelector('.text-\\[10px\\]').textContent.toLowerCase();
                const languages = card.querySelector('.text-\\[11px\\]').textContent.toLowerCase();

                const matchFound = title.includes(searchTerm) || imdbId.includes(searchTerm) || languages.includes(searchTerm);

                card.style.display = matchFound ? '' : 'none';
            });
        }

        function logout() {
            showConfirmation(
                'Logout',
                'Are you sure you want to logout from your account?',
                async () => {
                    try {
                        const response = await fetch('/admin/logout', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        });
                        const data = await response.json();
                        if (data.success) {
                            window.location.href = data.redirect;
                        }
                    } catch (error) {
                        console.error('Logout error:', error);
                        showToast('Error logging out', 'error');
                    }
                },
                'indigo',
                'Yes, Logout'
            );
        }

        async function previewSubtitle(url) {
            const modal = document.getElementById('subtitlePreviewModal');
            const loadingDiv = document.getElementById('subtitlePreviewLoading');
            const textDiv = document.getElementById('subtitlePreviewText');

            openModal('subtitlePreviewModal');
            loadingDiv.classList.remove('hidden');
            textDiv.textContent = '';

            try {
                const response = await fetch(url);
                const text = await response.text();

                const lines = text.split('\n');
                const preview = lines.slice(0, 100).join('\n');

                loadingDiv.classList.add('hidden');
                textDiv.textContent = preview + (lines.length > 100 ? '\n\n... (preview limited to first 100 lines)' : '');
            } catch (error) {
                loadingDiv.classList.add('hidden');
                textDiv.textContent = 'Error loading subtitle preview: ' + error.message;
                console.error('Preview error:', error);
            }
        }

        function closeSubtitlePreview() {
            closeModal('subtitlePreviewModal');
        }

        async function reprocess(id) {
            showConfirmation(
                'Reprocess Translation',
                'Do you want to reprocess this failed translation? This will restart the translation process.',
                async () => {
                    try {
                        const response = await fetch('/admin/reprocess', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ id })
                        });

                        if (response.ok) {
                            showToast('Translation queued for reprocessing!', 'success');
                            location.reload();
                        } else {
                            const data = await response.json();
                            showToast('Error: ' + (data.error || 'Failed to reprocess'), 'error');
                        }
                    } catch (error) {
                        showToast('Connection error. Please try again.', 'error');
                    }
                },
                'indigo',
                'Yes, Reprocess'
            );
        }

        async function downloadSubtitle(id) {
            try {
                window.location.href = '/api/download-subtitle/' + id;
                showToast('Downloading subtitle...', 'success');
            } catch (error) {
                showToast('Error downloading subtitle', 'error');
            }
        }

        let currentIdentifyId = null;

        function openIdentifyModal(id) {
            currentIdentifyId = id;
            resetAddSubtitleModal();
            openModal('addSubtitleModal');
            document.getElementById('searchContainer').style.display = 'block';
            document.getElementById('addSubtitleModalTitle').textContent = 'Identify Content';
        }

        async function identifyContent(imdbId, name, poster) {
            try {
                const response = await fetch('/api/identify-content', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        id: currentIdentifyId,
                        imdbId: imdbId,
                        name: name,
                        poster: poster
                    })
                });

                if (response.ok) {
                    showToast('Content identified successfully!', 'success');
                    closeAddSubtitleModal();
                    currentIdentifyId = null;
                    location.reload();
                } else {
                    const data = await response.json();
                    showToast('Error: ' + (data.error || 'Failed to identify content'), 'error');
                }
            } catch (error) {
                console.error('Identify error:', error);
                showToast('Connection error. Please try again.', 'error');
            }
        }

        async function deleteTranslation(id) {
            showConfirmation(
                'Delete Translation',
                'Are you sure you want to permanently delete this translation? This action cannot be undone.',
                async () => {
                    try {
                        const response = await fetch('/admin/delete', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ id })
                        });

                        if (response.ok) {
                            showToast('Translation deleted successfully!', 'success');
                            location.reload();
                        } else {
                            const data = await response.json();
                            showToast('Error: ' + (data.error || 'Failed to delete'), 'error');
                        }
                    } catch (error) {
                        showToast('Connection error. Please try again.', 'error');
                    }
                },
                'red',
                'Yes, Delete'
            );
        }

        let currentReprocessId = null;
        const availableLanguages = <%- JSON.stringify(languages) %>;

        function openReprocessModal(id) {
            currentReprocessId = id;

            const languageSelect = document.getElementById('modalLanguage');
            languageSelect.innerHTML = '';
            availableLanguages.forEach(lang => {
                const option = document.createElement('option');
                option.value = lang;
                option.textContent = lang;
                languageSelect.appendChild(option);
            });

            populateProviderDropdownWithCredentials('modalProvider');

            openModal('reprocessModal');
            updateModalFields();
        }

        function closeReprocessModal() {
            closeModal('reprocessModal');
            currentReprocessId = null;
        }

        function updateModalFields() {
            const provider = document.getElementById('modalProvider').value;
            const config = PROVIDER_CONFIGS[provider];
            const modelGroup = document.getElementById('modalModelGroup');
            const apiKeyGroup = document.getElementById('modalApiKeyGroup');
            const baseUrlGroup = document.getElementById('modalBaseUrlGroup');
            const modelNameGroup = document.getElementById('modalModelNameGroup');
            const modelSelect = document.getElementById('modalModel');

            if (!config.requiresApiKey) {
                apiKeyGroup.style.display = 'none';
                modelGroup.style.display = 'none';
                baseUrlGroup.style.display = 'none';
                modelNameGroup.style.display = 'none';
            } else if (provider === 'Custom') {
                apiKeyGroup.style.display = 'block';
                modelGroup.style.display = 'none';
                baseUrlGroup.style.display = 'block';
                modelNameGroup.style.display = 'block';
            } else {
                apiKeyGroup.style.display = 'block';

                if (config.requiresModel) {
                    modelGroup.style.display = 'block';
                    modelSelect.innerHTML = '';
                    config.models.forEach(model => {
                        const option = document.createElement('option');
                        option.value = model;
                        option.textContent = model;
                        modelSelect.appendChild(option);
                    });
                } else {
                    modelGroup.style.display = 'none';
                }

                if (config.requiresBaseUrl) {
                    baseUrlGroup.style.display = 'block';
                } else {
                    baseUrlGroup.style.display = 'none';
                }

                modelNameGroup.style.display = 'none';
            }
        }

        document.getElementById('modalProvider').addEventListener('change', function() {
            handleProviderChange('modal');
        });

        async function submitReprocess() {
            if (!currentReprocessId) return;

            const language = document.getElementById('modalLanguage').value;
            const provider = document.getElementById('modalProvider').value;
            let apikey = '', base_url = '', model_name = '';

            const config = PROVIDER_CONFIGS[provider];
            if (config.requiresApiKey) {
                if (provider === 'Custom') {
                    apikey = document.getElementById('modalApiKey').value;
                    base_url = document.getElementById('modalBaseUrl').value;
                    model_name = document.getElementById('modalModelName').value;
                } else {
                    apikey = document.getElementById('modalApiKey').value;
                    base_url = config.defaultBaseUrl;
                    model_name = document.getElementById('modalModel').value;
                }
            }

            try {
                const response = await fetch('/admin/reprocess-with-credentials', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        id: currentReprocessId,
                        language,
                        provider,
                        apikey,
                        base_url,
                        model_name
                    })
                });

                if (response.ok) {
                    showToast('Translation queued for reprocessing!', 'success');
                    closeReprocessModal();
                    location.reload();
                } else {
                    const data = await response.json();
                    showToast('Error: ' + (data.error || 'Failed to reprocess'), 'error');
                }
            } catch (error) {
                showToast('Connection error. Please try again.', 'error');
            }
        }

        window.addEventListener('click', function(event) {
            if (event.target.id === 'addSubtitleModal') {
                closeAddSubtitleModal();
            }
            if (event.target.id === 'episodesModal') {
                closeEpisodesModal();
            }
            if (event.target.id === 'subtitlePreviewModal') {
                closeSubtitlePreview();
            }
            if (event.target.id === 'reprocessModal') {
                closeReprocessModal();
            }
            if (event.target.id === 'masterPasswordModal') {
                closeMasterPasswordModal();
            }
        });
    </script>
</body>
