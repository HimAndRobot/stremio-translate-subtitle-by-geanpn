            const modelGroup = document.getElementById(prefix + 'ModelGroup');
            const baseUrlGroup = document.getElementById(prefix + 'BaseUrlGroup');
            const modelSelect = document.getElementById(prefix + 'Model');
            const baseUrlInput = document.getElementById(prefix + 'BaseUrl');

            if (!config.requiresApiKey) {
                apiKeyGroup.style.display = 'none';
                modelGroup.style.display = 'none';
                baseUrlGroup.style.display = 'none';
            } else {
                apiKeyGroup.style.display = 'block';
                modelGroup.style.display = 'block';
                baseUrlGroup.style.display = 'block';

                modelSelect.innerHTML = '';
                if (config.models && config.models.length > 0) {
                    config.models.forEach(model => {
                        const option = document.createElement('option');
                        option.value = model;
                        option.textContent = model;
                        modelSelect.appendChild(option);
                    });
                }

                baseUrlInput.value = config.defaultBaseUrl || '';
                baseUrlInput.placeholder = config.defaultBaseUrl || 'Enter base URL';
            }
        }

        function backToEpisodes() {
            document.getElementById('translationOptionsContainer').style.display = 'none';

            if (currentSelectedSeries.type === 'movie') {
                backToSearch();
            } else {
                document.getElementById('episodesSelectionContainer').style.display = 'block';
            }
        }

        async function startTranslation() {
            const provider = document.getElementById('downloadProvider').value;
            const config = PROVIDER_CONFIGS[provider];

            let apikey = '';
            let base_url = '';
            let model_name = '';

            if (config.requiresApiKey) {
                apikey = document.getElementById('downloadApiKey').value;
                if (provider === 'Custom') {
                    base_url = document.getElementById('downloadBaseUrl').value;
                    model_name = document.getElementById('downloadModel').value;
                } else {
                    base_url = config.defaultBaseUrl;
                    model_name = document.getElementById('downloadModel').value;
                }
            }

            const targetLanguage = document.getElementById('downloadLanguage').value;

            const episodes = currentSelectedSeries.type === 'movie'
                ? [{ season: 1, episode: 1 }]
                : selectedEpisodes;

            try {
                const response = await fetch('/api/download', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        imdbid: currentSelectedSeries.imdbId,
                        type: currentSelectedSeries.type,
                        episodes: episodes,
                        targetLanguage: targetLanguage,
                        provider: provider,
                        apikey: apikey,
                        base_url: base_url,
                        model_name: model_name
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    alert(`Success! ${result.message}`);
                    closeAddSubtitleModal();
                    location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.error || 'Failed to queue translation'));
                }
            } catch (error) {
                console.error('Translation error:', error);
                alert('Connection error. Please try again.');
            }
        }

        window.onclick = function(event) {
            const modal = document.getElementById('addSubtitleModal');
            if (event.target === modal) {
                closeAddSubtitleModal();
            }
        }

        function openEpisodesModal(seriesKey) {
            const series = seriesData.find(s => `${s.series_imdbid}_${s.langcode}` === seriesKey);
            if (!series) return;

            const modal = document.getElementById('episodesModal');
            const modalTitle = document.getElementById('episodesModalTitle');
            const modalBody = document.getElementById('episodesModalBody');

            modalTitle.textContent = `${series.series_name || series.series_imdbid} - All Episodes`;

            let html = '<div class="episodes-list">';
            series.episodes.forEach(episode => {
                const now = new Date();
                const created = new Date(episode.created_at);
                const timeDiff = now - created;
                const isProcessingTooLong = (episode.status === 'processing') ? (timeDiff > 600000) : false;
                const showReprocess = (episode.status === 'failed') ? true : isProcessingTooLong;

                let reprocessBtn = '';
                if (showReprocess) {
                    if (episode.apikey_encrypted) {
                        reprocessBtn = '<button class="warning" onclick="reprocess(' + episode.id + ')">üîÑ Reprocess</button>';
                    } else {
                        reprocessBtn = '<button class="warning" onclick="openReprocessModal(' + episode.id + ')">üîÑ Reprocess</button>';
                    }
                }

                html += '<div class="episode-item">' +
                    '<div class="episode-info">' +
                        '<span class="episode-label">S' + String(episode.series_seasonno).padStart(2, '0') + 'E' + String(episode.series_episodeno).padStart(2, '0') + '</span>' +
                        '<span class="status status-' + episode.status + '">' + episode.status + '</span>' +
                        '<div class="episode-stats">' +
                            '<span>ü™ô ' + (episode.token_usage_total || 0).toLocaleString() + '</span>' +
                            (episode.batches_total > 0 ? '<span>üì¶ ' + episode.batches_completed + '/' + episode.batches_total + '</span>' : '') +
                        '</div>' +
                    '</div>' +
                    '<div class="episode-actions">' +
                        '<button class="episode-menu-btn" onclick="toggleEpisodeMenu(event, ' + episode.id + ')">‚ãÆ</button>' +
                        '<div id="menu-' + episode.id + '" class="episode-dropdown">' +
                            reprocessBtn +
                            '<button class="danger" onclick="deleteTranslation(' + episode.id + ')">üóëÔ∏è Delete</button>' +
                        '</div>' +
                    '</div>' +
                '</div>';
            });
            html += '</div>';

            modalBody.innerHTML = html;
            modal.style.display = 'block';
        }

        function closeEpisodesModal() {
            document.getElementById('episodesModal').style.display = 'none';
        }

        function toggleEpisodeMenu(event, episodeId) {
            event.preventDefault();
            event.stopPropagation();

            const menu = document.getElementById(`menu-${episodeId}`);
            if (!menu) {
                console.error('Menu not found for episode:', episodeId);
                return;
            }

            const allMenus = document.querySelectorAll('.episode-dropdown');

            // Close all other menus
            allMenus.forEach(m => {
                if (m !== menu) m.classList.remove('show');
            });

            // Toggle current menu
            menu.classList.toggle('show');
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.episode-menu-btn')) {
                document.querySelectorAll('.episode-dropdown').forEach(menu => {
                    menu.classList.remove('show');
                });
            }
        });

        function filterSeries() {
            const searchTerm = document.getElementById('searchBox').value.toLowerCase();
            const cards = document.querySelectorAll('.series-card');

            cards.forEach(card => {
                const title = card.querySelector('.card-title').textContent.toLowerCase();
                const subtitle = card.querySelector('.card-subtitle').textContent.toLowerCase();
                const episodes = card.querySelectorAll('.episode-label');

                let matchFound = title.includes(searchTerm) || subtitle.includes(searchTerm);

                if (!matchFound) {
                    episodes.forEach(ep => {
                        if (ep.textContent.toLowerCase().includes(searchTerm)) {
                            matchFound = true;
                        }
                    });
                }

                card.style.display = matchFound ? '' : 'none';
            });
        }

        window.onclick = function(event) {
            const modal = document.getElementById('episodesModal');
            if (event.target === modal) {
                closeEpisodesModal();
            }
        }

        async function logout() {
            try {
                const response = await fetch('/admin/logout', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const data = await response.json();
                if (data.success) {
                    window.location.href = data.redirect;
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        }

        async function reprocess(id) {
            // Close all menus
            document.querySelectorAll('.episode-dropdown').forEach(menu => menu.classList.remove('show'));

            if (!confirm('Reprocess this failed translation?')) return;

            try {
                const response = await fetch('/admin/reprocess', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id })
                });

                if (response.ok) {
                    alert('Translation queued for reprocessing!');
                    location.reload();
                } else {
                    const data = await response.json();
                    alert('Error: ' + (data.error || 'Failed to reprocess'));
                }
            } catch (error) {
                alert('Connection error. Please try again.');
            }
        }

        async function deleteTranslation(id) {
            // Close all menus
            document.querySelectorAll('.episode-dropdown').forEach(menu => menu.classList.remove('show'));

            if (!confirm('Delete this translation? This cannot be undone.')) return;

            try {
                const response = await fetch('/admin/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id })
                });

                if (response.ok) {
                    alert('Translation deleted successfully!');
                    location.reload();
                } else {
                    const data = await response.json();
                    alert('Error: ' + (data.error || 'Failed to delete'));
                }
            } catch (error) {
                alert('Connection error. Please try again.');
            }
        }

        let currentReprocessId = null;
        const availableLanguages = <%- JSON.stringify(languages) %>;

        function openReprocessModal(id) {
            currentReprocessId = id;

            const languageSelect = document.getElementById('modalLanguage');
            languageSelect.innerHTML = '';
            availableLanguages.forEach(lang => {
                const option = document.createElement('option');
                option.value = lang;
                option.textContent = lang;
                languageSelect.appendChild(option);
            });

            populateProviderDropdownWithCredentials('modalProvider');

            document.getElementById('reprocessModal').style.display = 'block';
            updateModalFields();
        }

        function closeReprocessModal() {
            document.getElementById('reprocessModal').style.display = 'none';
            currentReprocessId = null;
        }

        function updateModalFields() {
            const provider = document.getElementById('modalProvider').value;
            const config = PROVIDER_CONFIGS[provider];
            const modelGroup = document.getElementById('modalModelGroup');
            const apiKeyGroup = document.getElementById('modalApiKeyGroup');
            const baseUrlGroup = document.getElementById('modalBaseUrlGroup');
            const modelNameGroup = document.getElementById('modalModelNameGroup');
            const modelSelect = document.getElementById('modalModel');

            if (!config.requiresApiKey) {
                apiKeyGroup.style.display = 'none';
                modelGroup.style.display = 'none';
                baseUrlGroup.style.display = 'none';
                modelNameGroup.style.display = 'none';
            } else if (provider === 'Custom') {
                apiKeyGroup.style.display = 'block';
                modelGroup.style.display = 'none';
                baseUrlGroup.style.display = 'block';
                modelNameGroup.style.display = 'block';
            } else {
                apiKeyGroup.style.display = 'block';
                modelGroup.style.display = 'block';
                baseUrlGroup.style.display = 'none';
                modelNameGroup.style.display = 'none';

                modelSelect.innerHTML = '';
                config.models.forEach(model => {
                    const option = document.createElement('option');
                    option.value = model;
                    option.textContent = model;
                    modelSelect.appendChild(option);
                });
            }
        }

        document.getElementById('modalProvider').addEventListener('change', function() {
            handleProviderChange('modal');
        });

        async function submitReprocess() {
            if (!currentReprocessId) return;

            const language = document.getElementById('modalLanguage').value;
            const provider = document.getElementById('modalProvider').value;
            let apikey = '', base_url = '', model_name = '';

            const config = PROVIDER_CONFIGS[provider];
            if (config.requiresApiKey) {
                if (provider === 'Custom') {
                    apikey = document.getElementById('modalApiKey').value;
                    base_url = document.getElementById('modalBaseUrl').value;
                    model_name = document.getElementById('modalModelName').value;
                } else {
                    apikey = document.getElementById('modalApiKey').value;
                    base_url = config.defaultBaseUrl;
                    model_name = document.getElementById('modalModel').value;
                }
            }

            try {
                const response = await fetch('/admin/reprocess-with-credentials', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        id: currentReprocessId,
                        language,
                        provider,
                        apikey,
                        base_url,
                        model_name
                    })
                });

                if (response.ok) {
                    alert('Translation queued for reprocessing!');
                    closeReprocessModal();
                    location.reload();
                } else {
                    const data = await response.json();
                    alert('Error: ' + (data.error || 'Failed to reprocess'));
                }
            } catch (error) {
                alert('Connection error. Please try again.');
            }
        }

        window.onclick = function(event) {
            const modal = document.getElementById('reprocessModal');
            if (event.target == modal) {
                closeReprocessModal();
            }
        }
