            select.innerHTML = '';

            PROVIDERS.forEach(provider => {
                const option = document.createElement('option');
                option.value = provider;
                option.textContent = provider === 'Custom' ? 'Custom (OpenAI Compatible)' : provider;
                select.appendChild(option);
            });

            const credentials = loadSavedCredentials();
            if (credentials.length > 0) {
                const separator = document.createElement('optgroup');
                separator.label = '--- Saved Credentials ---';
                select.appendChild(separator);

                credentials.forEach((cred, index) => {
                    const option = document.createElement('option');
                    option.value = `saved_${index}`;
                    option.textContent = `üîë ${cred.name} (${cred.provider})`;
                    option.dataset.isSaved = 'true';
                    option.dataset.credentialIndex = index;
                    separator.appendChild(option);
                });
