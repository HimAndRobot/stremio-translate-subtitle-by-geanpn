        function openMasterPasswordModal(context, credentialIndex) {
            currentCredentialContext = { context, credentialIndex };
            document.getElementById('masterPasswordInput').value = '';
            document.getElementById('masterPasswordError').style.display = 'none';
            document.getElementById('masterPasswordModal').style.display = 'block';
        }

        function closeMasterPasswordModal() {
            const context = currentCredentialContext ? currentCredentialContext.context : null;

            document.getElementById('masterPasswordModal').style.display = 'none';
            currentCredentialContext = null;
            pendingDecryptedCredential = null;

            if (context === 'download') {
                document.getElementById('downloadProvider').selectedIndex = 0;
                updateProviderFields('download');
            } else if (context === 'modal') {
                document.getElementById('modalProvider').selectedIndex = 0;
                updateModalFields();
            }
        }

        async function submitMasterPassword() {
            const password = document.getElementById('masterPasswordInput').value;
            const errorDiv = document.getElementById('masterPasswordError');

            if (!password) {
                errorDiv.textContent = 'Please enter your master password';
                errorDiv.style.display = 'block';
                return;
            }

            if (!currentCredentialContext) {
                errorDiv.textContent = 'Invalid context';
                errorDiv.style.display = 'block';
                return;
            }

            try {
                const credentials = loadSavedCredentials();
                const credential = credentials[currentCredentialContext.credentialIndex];

                if (!credential) {
                    errorDiv.textContent = 'Credential not found';
                    errorDiv.style.display = 'block';
                    return;
                }

                const decryptedApiKey = await decryptData(credential.apikey_encrypted, password);
                const decryptedBaseUrl = credential.base_url_encrypted
                    ? await decryptData(credential.base_url_encrypted, password)
                    : '';
                const decryptedModelName = credential.model_name_encrypted
                    ? await decryptData(credential.model_name_encrypted, password)
                    : '';

                pendingDecryptedCredential = {
                    provider: credential.provider,
                    apikey: decryptedApiKey,
                    base_url: decryptedBaseUrl,
                    model_name: decryptedModelName,
                    name: credential.name
                };

                closeMasterPasswordModal();
                applyDecryptedCredential(currentCredentialContext.context);

            } catch (error) {
                console.error('Decryption error:', error);
                errorDiv.textContent = 'Incorrect password or corrupted data';
                errorDiv.style.display = 'block';
            }
        }

        function applyDecryptedCredential(context) {
            if (!pendingDecryptedCredential) return;

            const cred = pendingDecryptedCredential;

            if (context === 'download') {
                document.getElementById('downloadApiKey').value = cred.apikey;
                document.getElementById('downloadBaseUrl').value = cred.base_url;

                const providerSelect = document.getElementById('downloadProvider');
                providerSelect.value = cred.provider;
