PORT=3000
ADDRESS=0.0.0.0
BASE_URL=http://localhost:3000

DB_TYPE=sqlite
SQLITE_PATH=./data/database.db

# MySQL configuration (for production/Coolify)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=stremio
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=stremio_translate
MYSQL_ROOT_PASSWORD=your_root_password_here

# Redis configuration for BullMQ
REDIS_URL=redis://redis:6379

# Queue configuration
# Number of subtitle files to process simultaneously
QUEUE_CONCURRENCY=3
# Number of batches to process simultaneously (default: 20)
BATCH_QUEUE_CONCURRENCY=20

# Bull Board authentication
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin

# Encryption key for storing credentials (must be exactly 32 characters)
# Generate a random key with: openssl rand -base64 32 | head -c 32
ENCRYPTION_KEY=G/QZAvGfmtA2p2fTq65whrksMBQbHf2k

#CORS proxy URL for Google Translate API (only used when GOOGLE_TRANSLATE_MODE=local)
CORS_URL=http://cors-anywhere.herokuapp.com/

# Google Translate mode: 'local' uses google-translate-api-browser with CORS proxy, 'production' (default) uses Cloudflare Worker
# Use 'local' for self-hosting, 'production' for hosted instances
GOOGLE_TRANSLATE_MODE=local

#FALSE MODE = in local you dont have public ip, so you cant publish to central, you plugin dont show in the stremio store
#TRUE MODE = in production you have public ip, so you can publish to central, and your plugin will show in the stremio store
PUBLISH_IN_STREMIO_STORE=FALSE