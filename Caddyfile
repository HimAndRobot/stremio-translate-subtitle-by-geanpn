{
    local_certs
    auto_https disable_redirects
}

localhost:443 {
    tls internal

    reverse_proxy app:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    log {
        output stdout
        format console
    }
}

localhost:80 {
    redir https://localhost:8443{uri}
}
